<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Custom Advanced Settings -->
    <Preference
        android:key="advanced_settings"
        android:title="@string/advanced_pref_title"
        android:icon="@drawable/ic_advanced_settings">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.android.settings.custom.advanced.AdvancedSettingsActivity"
            android:targetPackage="com.android.settings.custom" />
    </Preference>

    <Preference
        android:key="display_settings"
        android:title="@string/display_pref_title"
        android:icon="@drawable/ic_settings_display">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.android.settings.custom.display.DisplaySettingsActivity"
            android:targetPackage="com.android.settings.custom" />
    </Preference>

    <Preference
        android:key="sound_settings"
        android:title="@string/sound_pref_title"
        android:icon="@drawable/ic_volume_up_24dp">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.android.settings.custom.sound.SoundSettingsActivity"
            android:targetPackage="com.android.settings.custom" />
    </Preference>

</PreferenceScreen>
